<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B1023A">

        <!--image view for displaying course image-->
        <TextView
            android:id="@+id/id_number"
            style="@style/text_h3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/ic_airfly_background"
            android:text="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:padding="4dp">

            <!--Textview for displaying our Course Name-->
            <TextView
                android:id="@+id/account_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="John"
                android:gravity="center"
                android:textColor="@color/teal_200"
                android:textSize="18sp"
                style="@style/text_h3"
                android:textStyle="bold" />

            <!--Textview for displaying our Course Duration-->
            <TextView
                android:id="@+id/account_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                style="@style/text_p"
                android:text="Score: 08 | Bird killed: 201"
                android:gravity="center"
                android:textColor="@color/white" />

            <!--Textview for displaying our Course Description-->
            <TextView
                android:gravity="center"
                android:id="@+id/account_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                style="@style/text_p"
                android:text="Time: 2022-01-01"
                android:textColor="@color/white" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>